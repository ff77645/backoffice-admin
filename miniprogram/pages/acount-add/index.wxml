<van-nav-bar
  title="添加账户"
  left-arrow
  bind:click-left="navBack"
/>
<scroll-view 
  class="scrollable bg-slate-50" 
  scroll-y
>
<view class="h-3"></view>
<van-cell-group inset>
  <van-field
    model:value="{{ nickname }}"
    label="头像"
    style="--cell-line-height:auto;"
    center
  >
    <van-uploader 
      slot="input" 
      accept="image"
      use-before-read
      file-list="{{ fileList }}" 
      bind:before-read="beforeRead"
      show-upload="{{showUpload}}"
      max-count="{{1}}"
    />
  </van-field>
  <van-field
    required
    model:value="{{ nickname }}"
    label="名称"
    placeholder="请输入名称"
  />
  <van-field
    required
    model:value="{{ password }}"
    label="密码"
    placeholder="请输入密码"
    password
  />
  <van-field
    model:value="{{ address }}"
    label="手机号"
    placeholder="请输入手机号"
  />
  <van-field
    model:value="{{ address }}"
    label="地址"
    placeholder="请选择地址"
  />
  <van-field
    model:value="{{ email }}"
    label="邮箱"
    placeholder="请输入邮箱"
  />
  <van-field
    model:value="{{ describe }}"
    label="备注"
    placeholder="请输入备注"
  />
</van-cell-group>
</scroll-view>
<van-popup 
  show="{{ showArea }}"
  position="bottom"
>
  <van-area 
    title="选择地址"
    area-list="{{ areaList }}"
    bind:confirm="selectAreaConfirm"
    bind:cancel="selectAreaCancle"
  />
</van-popup>